<% layout("layouts/boilerplate") %>
<h1>Delete: <%= category.name %></h1>
<div class="show-container">
  <h2 class="centered-title">Are you sure you want to delete this category?</h2>
</div>
<form method="POST" action="/categories/<%= category._id %>/delete?_method=DELETE">
  <button class="button bg-red" type="submit">Delete</button>
</form>
<% if (products.length) { %>
<h2 class="centered-title">The following products will also be deleted</h2>
<div class="product-grid-container">
  <% for (product of products) {%>
  <a href="<%= product.url %>">
    <img class="product-image" src="/images/<%= product.image %>" alt="<%= product.name %>"/>
    <h3><%= product.name %></h3>
    <h2>$<%= product.price.toFixed(2) %></h2>
  </a>
  <% } %>
</div>
<% } else {%>
<% } %>
</div>